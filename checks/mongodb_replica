def inventory_mongodb_replica(info):
    return [(None, None)]


def check_mongodb_replica(_no_item, _no_params, section):
    yield (
        (
            0,
            f"Primary: {section.primary}",
        )
        if section.primary is not None
        else (
            2,
            "Replica set does not have a primary node",
        )
    )
    if section.secondaries.active:
        yield (
            0,
            f"Hosts: {section.secondaries.active}",
        )
    if section.arbiters:
        yield (
            0,
            f"Arbiters: {section.arbiters}",
        )


check_info["mongodb_replica"] = {
    "check_function": check_mongodb_replica,
    "inventory_function": inventory_mongodb_replica,
    "service_description": "MongoDB Replica Set Status",
}
