from typing import Any, Mapping

from cmk.base.plugins.agent_based.vxvm_multipath import VXVMMultipathSection

# Example output:
# <<<vxvm_multipath>>>
# sda                  ENABLED      OTHER_DISKS  1      1     0     other_disks
# LIO-Sechs_0          ENABLED      aluadisk     1      1     0     LIO-Sechs
# LIO-Sechs_1          ENABLED      aluadisk     1      1     0     LIO-Sechs
# LIO-Sechs_2          ENABLED      aluadisk     1      1     0     LIO-Sechs
#


def discover_vxvm_multipath(section: VXVMMultipathSection):
    for disk in section:
        yield disk, None


def check_vxvm_multipath(
    item: str,
    params: Mapping[str, Any],
    section: VXVMMultipathSection,
):
    if (disk := section.get(item)) is None:
        yield (3, "Item not found")
        return

    state = 0
    if disk.active_paths != disk.paths and disk.active_paths >= disk.paths / 2:
        state = 1
    elif disk.inactive_paths > 0 and disk.inactive_paths > disk.paths / 2:
        state = 2
    yield (
        state,
        f"Status: {disk.status}, ({disk.active_paths:.0f}/{disk.paths:.0f}) Paths to enclosure {disk.enclosure} enabled",
    )


check_info["vxvm_multipath"] = {
    # Section already migrated!
    "check_function": check_vxvm_multipath,
    "inventory_function": discover_vxvm_multipath,
    "service_description": "Multipath %s",
}
